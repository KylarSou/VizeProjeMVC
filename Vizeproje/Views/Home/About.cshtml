@model IEnumerable<Vizeproje.Models.BolumTb>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<h2>Bölüm Ekle</h2>

@using (Html.BeginForm("AddBolum", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ogrencid", "Ogrencid")
        @Html.TextBox("Ogrencid", null, new { @class = "form-control", placeholder = "Öğrenci ID" })
    </div>
    <div class="form-group">
        @Html.Label("Ders", "Ders")
        @Html.TextBox("Ders", null, new { @class = "form-control", placeholder = "Ders Adı" })
    </div>
    <div class="form-group">
        @Html.Label("Kredi", "Kredi")
        @Html.TextBox("Kredi", null, new { @class = "form-control", placeholder = "Kredi" })
    </div>
    <button type="submit" class="btn btn-primary">Bölüm Ekle</button>
}

<h2>Bölümler</h2>

@Html.ActionLink("Bölümleri Göster", "ShowBolum", "Home", null, new { @class = "btn btn-primary" })
